{
  "name": "cursala-public-api",
  "version": "1.1.0",
  "description": "cursala Public API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon --ignore src/static-remote -r tsconfig-paths/register src/index.ts",
    "server:prod": "node ./dist/src/index.js",
    "server:prod:docker": "npm run update-common-lib && node ./src/index.js",
    "build": "tsx build.mts && tsc-alias -p tsconfig.json",
    "start:prod": "node ./dist/src/index.js",
    "test": "jest --config=jest.config.js",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "lint": "eslint src --cache --max-warnings 100",
    "lint:fix": "eslint src --cache --fix",
    "pre-commit": "lint-staged",
    "debug": "nodemon -e ts,tsx --exec node -r ts-node/register -r tsconfig-paths/register --inspect src/index.ts"
  },
  "repository": {},
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">20.0.0",
    "npm": ">10.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-openapi-validator": "^5.6.0",
    "express-rate-limit": "^8.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.1",
    "mongoose": "^9.0.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "fs-extra": "^11.3.2",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write --no-error-on-unmatched-pattern --ignore-unknown",
    "*.ts": "npm run lint --"
  }
}
